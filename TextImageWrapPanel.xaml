             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Ink"
             mc:Ignorable="d" 
             d:DesignHeight="549" d:DesignWidth="250">
    <Grid>
        <ScrollViewer x:Name="sv" HorizontalAlignment="Right" Width="250" Height="549" VerticalAlignment="Bottom">
            <WrapPanel x:Name="wp" Height="549" Width="250"/>
        </ScrollViewer>
    </Grid>
</UserControl>
